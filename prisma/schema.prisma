generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"n
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  trainerSchedules TrainerSchedule[] @relation("TrainerSchedules")
  bookings         Booking[]
}

model TrainerSchedule {
  id        Int      @id @default(autoincrement())
  date      DateTime
  startTime DateTime
  endTime   DateTime

  // Relations
  trainer   User      @relation("TrainerSchedules", fields: [trainerId], references: [id])
  trainerId Int
  bookings  Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Booking {
  id         Int             @id @default(autoincrement())
  trainee    User            @relation(fields: [traineeId], references: [id])
  traineeId  Int
  schedule   TrainerSchedule @relation(fields: [scheduleId], references: [id])
  scheduleId Int

  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  TRAINER
  TRAINEE
}
